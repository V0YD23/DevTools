pipeline {
    agent any

    stages {
        stage('Debug Environment') {
            steps {
                script {
                    sh 'whoami && groups && sudo docker ps'
                }
            }
        }
        stage('Pull Docker Image') {
            steps {
                script {
                    sh 'sudo docker pull hello-world'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    sh 'sudo docker run hello-world'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed!'
        }
    }
}
